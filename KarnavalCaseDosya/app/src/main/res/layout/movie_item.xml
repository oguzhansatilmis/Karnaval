<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:textSize="14sp"
        android:padding="4dp"
        android:layout_marginStart="12dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/movie_image_banner"
        app:layout_constraintStart_toStartOf="@id/movie_image_banner"
        app:layout_constraintTop_toTopOf="@id/movie_image_banner">

    </TextView>

    <ImageView
        android:id="@+id/movie_image_banner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/banner_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/favorite_movie_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/star_1"
        android:visibility="visible"
        android:layout_margin="10dp"
        android:layout_width="22dp"
        android:layout_height="22dp">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>